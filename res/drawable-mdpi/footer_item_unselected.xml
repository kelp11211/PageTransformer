<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
      android:shape="rectangle">
	<item android:state_pressed="true">
        <shape>
		    <gradient
			    android:startColor="@color/footer_item_seletced_color"
			    android:endColor="@color/footer_item_seletced_color"
			    android:angle="0" />
		    
		    <corners 
		        android:bottomLeftRadius="10dp"  
		        android:topLeftRadius="10dp" 
		        android:topRightRadius="10dp" 
		        android:bottomRightRadius="10dp"/>
		    
			<stroke 
			    android:color="@color/footer_item_seletced_color" 
			    android:width="1dp" />
		</shape>
	</item >
	<item>
        <shape>
		    <gradient
			    android:startColor="@color/footer_item_unseletced_color"
			    android:endColor="@color/footer_item_unseletced_color"
			    android:angle="0" />
		    
		    <corners 
		        android:bottomLeftRadius="10dp"  
		        android:topLeftRadius="10dp" 
		        android:topRightRadius="10dp" 
		        android:bottomRightRadius="10dp"/>
		    
			<stroke 
			    android:color="@color/footer_item_unseletced_color" 
			    android:width="1dp" />
		</shape>
	</item >
</selector>
